{% extends 'base.html.twig' %}

{% block title %}Espace administrateur{% endblock %}

{% block body %}
    <div class="container mt-4" style="margin-bottom: 100px">
        <h1 class="text-center">Gérer les options</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        {% endfor %}
        <div class="text-right mb-4">
            <a href="{{ path('option_new') }}" class="btn btn-primary">Créer une nouvelle option</a>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for option in options %}
                <tr>
                    <td>{{ option.name }}</td>
                    <td>
                        <a href="{{ path('option_edit', {id: option.id}) }}" class="btn btn-secondary">Editer</a>
                       {% include 'admin_option/_delete_form.html.twig' %}
                    </td>
                </tr>
            {% else %}
                <div class="empty" style="margin: 20px auto">
                    Aucune option de disponible pour le moment.
                </div>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
